{
  "name": "native",
  "version": "1.0.0",
  "main": "index.js",
  "author": "opensource@nativecode.com",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "coveralls": "^3.0.0",
    "lerna": "^2.11.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.1"
  },
  "nyc": {
    "all": true,
    "exclude": [
      ".cache",
      "node_modules",
      "**/src/**/*.spec.ts",
      "**/src/Logger.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "packages/*/src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "sourceMap": true,
    "temp-directory": ".cache/nyc"
  },
  "scripts": {
    "build": "lerna bootstrap ; lerna run build",
    "prebuild": "yarn",
    "start": "lerna run startdev",
    "test": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "pretest": "yarn run build",
    "testonly": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "docker": "lerna run docker",
    "docker-push": "lerna run docker-push",
    "push": "sh push.sh",
    "travis-ssh": "set-up-ssh --key \"$encrypted_c428ddd815a2_key\" --iv \"$encrypted_c428ddd815a2_iv\" --path-encrypted-key \"deploy.enc\""
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ]
}
