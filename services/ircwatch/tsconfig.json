{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "diagnostics": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "bin",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./types"
    ]
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ]
}
