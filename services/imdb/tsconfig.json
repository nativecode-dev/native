{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "bin",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "src/"
  ]
}
