{
  "author": "opensource@nativecode.com",
  "main": "./bin/relman.js",
  "name": "@ncpub/relman",
  "license": "MIT",
  "private": true,
  "types": "./bin/relman.d.ts",
  "version": "0.2.28-1",
  "bin": {
    "cli-relman": "./bin/relman.js"
  },
  "dependencies": {
    "@ncpub/irc-pubsub": "^0.2.28-1",
    "@nofrills/console": "^3.4.0",
    "@nofrills/lincoln-debug": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "*",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "~2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nativecode-dev/native.git"
  },
  "scripts": {
    "build": "cli-tasks build",
    "clean": "cli-tasks clean",
    "start": "cli-tasks start",
    "startdev": "cli-tasks start:dev",
    "docker": "cli-tasks docker_build",
    "docker-push": "cli-tasks docker:push"
  },
  "tasks": {
    "build": [
      "[clean]",
      "tsc --project tsconfig.build.json",
      "cli-shabang"
    ],
    "clean": [
      "rimraf bin"
    ],
    "docker:build": [
      "docker build --rm -t nativecode/relman:latest ."
    ],
    "docker:push": [
      "[docker:build]",
      "docker push nativecode/relman:latest"
    ],
    "start": [
      "node bin/relman.js"
    ],
    "start:dev": [
      "ts-node src/relman.ts"
    ]
  }
}
